@model AuthModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<body class="text-center">
    <form class="form-signin" method="post" asp-controller="Auth" asp-action="Login">
        <input type="hidden" asp-for="ReturnUrl"/>
        <h2 class="mb-3">Войти</h2>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Телефон" asp-for="Phone" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Пароль" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div asp-validation-summary="All"></div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
</body>

